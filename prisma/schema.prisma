generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Abonent {
  id           String           @id @default(uuid())
  email        String           @unique
  passwordHash String
  refreshToken String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime?        @updatedAt
  proxies      ProxyToAbonent[]

  @@map("abonents")
}

model ProjectCreeds {
  id             String           @id @default(uuid())
  title          String?
  credentials    Json?
  ProxyToAbonent ProxyToAbonent[]

  @@map("project_creeds")
}

model Proxy {
  id        String           @id @default(uuid())
  ip        String?
  port      Int?
  protocol  String?
  host      String?
  is_active Boolean?
  username  String?
  password  String?
  createdAt DateTime         @default(now())
  updatedAt DateTime?        @updatedAt
  abonents  ProxyToAbonent[]

  @@map("proxies")
}

model ProxyToAbonent {
  proxy     Proxy   @relation(fields: [proxyId], references: [id])
  proxyId   String
  abonent   Abonent @relation(fields: [abonentId], references: [id])
  abonentId String

  project         ProjectCreeds @relation(fields: [projectCreedsId], references: [id])
  projectCreedsId String

  status    Boolean?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  @@unique([proxyId, abonentId, projectCreedsId], name: "proxyId_abonentId_projectCreedsId")
  @@map("proxies_abonent_credentials")
}
